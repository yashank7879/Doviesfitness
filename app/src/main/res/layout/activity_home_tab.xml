<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home_tab.HomeTabActivity">


    <Button
            android:id="@+id/btn_logout"
            android:layout_width="@dimen/_100sdp"
            android:background="@drawable/create_account_btn_bg"
            android:text="Logout"
            android:layout_margin="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tv_dev"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_dev"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/under_devlopment_mode"
              style="@style/mediumProductBoldStyle"
              android:textColor="@color/colorBlack"
              android:layout_centerInParent="true"/>

</RelativeLayout>