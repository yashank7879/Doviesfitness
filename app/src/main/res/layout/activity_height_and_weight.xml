<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_img_weight"
        tools:context=".ui.authentication.signup.HeightAndWeightActivity">


  <!--  <Button android:id="@+id/btn_opn_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/done"
    />-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">


        <TextView
                android:id="@+id/tv_skip"
                style="@style/mediumProductRegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:gravity="end"
                android:text="@string/skip"
                android:textColor="@color/colorWhite" />


        <TextView
                style="@style/largeProductBoldtyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40sdp"
                android:text="@string/how_tall_are_you"
                android:textColor="@color/colorWhite" />

        <LinearLayout
                android:id="@+id/ll_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_cm"
                    style="@style/ExtralargeProductBoldtyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:textColor="@color/colorWhite" />

            <TextView
                    style="@style/ExtraSmallProductBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="@string/cm"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/colorWhite" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_gravity="bottom"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_down_arrow_white_ico"
                    android:layout_marginLeft="@dimen/_5sdp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_ft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/ll_feet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/_25sdp">

                <TextView
                        android:id="@+id/tv_feet"
                        style="@style/ExtralargeProductBoldtyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_0"
                        android:textColor="@color/colorWhite" />

                <TextView
                        style="@style/ExtraSmallProductBoldStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:text="@string/ft"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/colorWhite" />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_gravity="bottom"
                        android:contentDescription="@string/todo"
                        app:srcCompat="@drawable/ic_down_arrow_white_ico"
                        android:layout_marginLeft="@dimen/_5sdp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_inch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                            android:id="@+id/tv_inch"
                            style="@style/ExtralargeProductBoldtyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_0"
                            android:textColor="@color/colorWhite" />

                    <TextView
                            style="@style/ExtraSmallProductBoldStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:text="@string/in"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/colorWhite" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:layout_gravity="bottom"
                            android:contentDescription="@string/todo"
                            app:srcCompat="@drawable/ic_down_arrow_white_ico"
                            android:layout_marginLeft="@dimen/_5sdp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/ft_btn"
                    style="@style/SmallProductBoldStyle"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/ft"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/rectangle_back_white"
            />

            <Button
                    android:id="@+id/cm_btn"
                    style="@style/SmallProductBoldStyle"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/cm"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/rigth_trans_corner"

            />
        </LinearLayout>





    </LinearLayout>



    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_80sdp"
            android:orientation="vertical">
        <TextView
                style="@style/largeProductBoldtyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/what_s_your_weight"
                android:textColor="@color/colorWhite" />


        <LinearLayout
                android:id="@+id/ll_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_kg"
                    style="@style/ExtralargeProductBoldtyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:textColor="@color/colorWhite" />

            <TextView
                    style="@style/ExtraSmallProductBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="@string/kg"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/colorWhite" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_gravity="bottom"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_down_arrow_white_ico"
                    android:layout_marginLeft="@dimen/_5sdp" />

        </LinearLayout>


        <LinearLayout
                android:id="@+id/ll_lbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_lbs"
                    style="@style/ExtralargeProductBoldtyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:textColor="@color/colorWhite" />

            <TextView
                    style="@style/ExtraSmallProductBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="@string/lbs"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/colorWhite" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_gravity="bottom"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_down_arrow_white_ico"
                    android:layout_marginLeft="@dimen/_5sdp" />

        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/lbs_btn"
                    style="@style/SmallProductBoldStyle"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/lbs"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/rectangle_back_white"

            />

            <Button
                    android:id="@+id/kg_btn"
                    style="@style/SmallProductBoldStyle"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/kg"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/rigth_trans_corner"

            />
        </LinearLayout>


    </LinearLayout>


    <ImageView
            android:id="@+id/iv_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_left_arrow_white"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:scaleType="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true" />


</RelativeLayout>