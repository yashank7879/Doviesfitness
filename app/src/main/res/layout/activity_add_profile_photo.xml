<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/rl_main"
        xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_height="match_parent"
                tools:context=".ui.authentication.signup.CreateUserActivity">

    <TextView
            android:id="@+id/tv_skip"
            style="@style/mediumProductRegularStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:text="@string/skip"
            android:textColor="@color/colorBlack2"
            android:layout_alignParentRight="true"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical">

        <TextView
                style="@style/largeProductBoldtyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_profile_photo"
                android:textColor="@color/colorBlack"/>

        <TextView
                style="@style/SmallProductRegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/add_a_profile_photo_so_that_your_friend_know_it_s_your"
                android:textColor="@color/colorLightBlack"/>

        <RelativeLayout
                android:id="@+id/cped_rl"
                android:layout_width="@dimen/_140sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_height="@dimen/_160sdp">



            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_img"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_140sdp"
                        android:src="@color/colorWhite"
                        app:civ_border_color="@color/colorLightBlack"
                        app:civ_border_width="3dp"
                />

                <ImageView
                        android:id="@+id/iv_placeholder"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_ico_cemera_img"
                />
            </FrameLayout>



            <ImageView
                    android:id="@+id/iv_upload"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_ico_upload_img"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_10sdp"/>


        </RelativeLayout>

    </LinearLayout>

    <ImageView
            android:id="@+id/iv_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_left_arrow_white"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:scaleType="center"
            android:tint="@color/colorBlack"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>

</RelativeLayout>