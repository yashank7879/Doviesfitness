<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_img_gender"
        android:orientation="vertical"
        tools:context=".ui.authentication.signup.SelectGenderActivity">


    <TextView
            android:id="@+id/tv_question"
            style="@style/largeProductBoldtyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_s_your_gender"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_300sdp"
            android:layout_centerHorizontal="true"

    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_below="@id/tv_question"
                  android:gravity="center"
                  android:layout_marginTop="@dimen/_10sdp"
    >

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="@dimen/_5sdp"
                      android:background="@drawable/rectangle_white_bg"
        >

            <Button
                    android:id="@+id/btn_female"
                    style="@style/mediumProductBoldStyle"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/female"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
            />

        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="@dimen/_5sdp"
                      android:background="@drawable/rectangle_white_bg"
        >

            <Button
                    android:id="@+id/btn_male"
                    style="@style/mediumProductBoldStyle"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/male"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
            />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>